{
  "manifest_version": 3,
  "name": "CRX Demo",
  "version": "1.0.0",

  "description": "æ‰©å±•çš„æè¿°",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "css": ["content-scripts/document_start.css"],
      "js": ["content-scripts/document_start.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "match_origin_as_fallback": true
    },
    {
      "css": ["content-scripts/document_end.css"],
      "js": ["content-scripts/document_end.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "css": ["content-scripts/document_idle.css"],
      "js": ["content-scripts/document_idle.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "js": ["content-scripts/document_idle_main.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "world": "MAIN",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "webRequest",
    "cookies",
    "desktopCapture",
    "downloads",
    "notifications",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup/index.html",
    "default_title": "è¿™æ˜¯ä¸€ä¸ªè‰è“ğŸ“"
    // "default_icon": {
    //   "16": "popup/emotion_005.png"
    // }
  },
  "devtools_page": "devtools/index.html",
  "side_panel": {
    "default_path": "side_panel/index.html"
  },
  "options_page": "options_page/index.html",
  "chrome_url_overrides" : {
    // "newtab": "newtab/index.html"
    // "history": "history/index.html"
    // "bookmarks": "bookmarks/index.html"
  },

  "homepage_url": "https://dombro.site/",

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "responseHeaders",
        "enabled": true,
        "path": "./rule_resources/responseHeaders.json"
      }
    ]
  }
}
